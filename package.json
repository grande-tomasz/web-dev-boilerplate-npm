{
  "name": "web-build-boilerplate-npm",
  "version": "1.0.0",
  "description": "Boilerplate package for building web projects",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass --source-map true --output-style expanded --indent-type spaces --indent-width 2 -o css/ scss/",
    "autoprefixer": "postcss -u autoprefixer -r css/*.css",
    "sass-autoprefixer": "run-s sass autoprefixer",
    "rm-rf": "rimraf dist/*",
    "mkdir-p": "mkdirp dist/css -p && mkdirp dist/js -p && mkdirp dist/img -p",
    "cp-r": "cpr fonts dist/fonts && cpr libs dist/libs",
    "dist:prepare": "run-s rm-rf mkdir-p cp-r",
    "minify:html": "html-minifier --collapse-boolean-attributes --collapse-whitespace --decode-entities --html5 --process-conditional-comments --remove-attribute-quotes --remove-comments --remove-empty-attributes --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes --remove-tag-whitespace --sort-attributes --sort-class-name --trim-custom-fragments --use-short-doctype -o dist/index.html index.html",
    "minify:css": "cleancss -o dist/css/style.css css/style.css",
    "minify:js": "uglifyjs js/*.js -m -c -o dist/js/app.js",
    "minify:img": "imagemin img/* -o dist/img",
    "browse:dist": "browser-sync start --server --files \"dist/*.html\" ",
    "build": "run-s dist:* sass-autoprefixer minify:*",
    "browse:build": "run-s build browse:dist",
    "watch:sass": "onchange \"scss\" -- npm run sass-autoprefixer",
    "browse:src": "browser-sync start --server --files \"*.html\" \"css/*.css\" \"js/*.js\" ",
    "watch": "run-p watch:* browse:src",
    "postinstall": "run-s build watch"
  },
  "author": "Tomasz Grande",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "browser-sync": "^2.19.0",
    "clean-css-cli": "^4.1.10",
    "cpr": "^3.0.1",
    "html-minifier": "^3.5.7",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.2.2"
  }
}
